{
	"cSpell.words": [
		"CICD",
		"clsx",
		"Kinson",
		"preinstall",
		"typecheck",
		"Velaptor"
	],
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"docs": false,
		"node_modules": true,
		".docusaurus": true,
		"sidebars.js": true,
		"**/.nojekyll": true,
		"build": true
	},
	"[javascript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features",
		"editor.insertSpaces": false,
		"editor.tabSize": 4,
	},
	"[typescript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features",
		"editor.insertSpaces": false,
		"editor.tabSize": 4
	},
	"[tsx]": {
		"editor.defaultFormatter": "vscode.typescript-language-features",
		"editor.insertSpaces": false,
		"editor.tabSize": 4
	},
	"[yaml]": {
		"editor.defaultFormatter": "vscode.typescript-language-features",
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features",
		"editor.insertSpaces": false,
		"editor.tabSize": 4
	},
	"editor.detectIndentation": false,
	"[github-actions-workflow]": {
		"editor.tabSize": 2,
		"editor.insertSpaces": true
	},
}
